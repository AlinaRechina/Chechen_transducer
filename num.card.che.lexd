PATTERNS
(NumAttAbs[-Agr] | NumAttObl[-Agr]) [<num>:]          #no inflection
NounClass (NumAttAbs[Agr] | NumAttObl[Agr]) [<num>:]  #agreement + no inflection

NumSubstAbs[-Agr] [<num>:]                                                                                     # absolutive
NumSubstAbs[-Agr] [<num>:] NumOblique[mm] Case[Num_erg]                                                        # ergative
NumSubstObl[-Agr] [<num>:] NumOblique[nn] Case[Num]
NumSubstObl[-Agr] [<num>:] NumOblique[n] Case[Num_n]
                                                                                                               # various cases, not ergative
NumSubstObl[-Agr] [<num>:] NumOblique ((Plural[Pl_j] Case[Pl_j]) | (Plural[Pl_sh] Case[Pl_sh]))                # plural  
NumSubstObl[-Agr] [<num>:] NumOblique Case[all_ga] (AllDer | (AllDer1 AllDer2))?                               # singular allative derivations
NumSubstObl[-Agr] [<num>:] NumOblique Plural[Pl_sh] Case[all_der,Pl_sh] (AllDer | (AllDer1 AllDer2))?          # plural allative derivations

# whith class agreement (4, 14)
NounClass NumSubstAbs[Agr] [<num>:]                                                                            # absolutive
NounClass NumSubstAbs[Agr] [<num>:] NumOblique[mm] Case[erg_a]                                                 # ergative
NounClass NumSubstObl[Agr] [<num>:] NumOblique[nn] Case[Num]
NounClass NumSubstObl[Agr] [<num>:] NumOblique[n] Case[Num_n]                                                           # various cases, not ergative
NounClass NumSubstObl[Agr] [<num>:] NumOblique ((Plural[Pl_j] Case[Pl_j]) | (Plural[Pl_sh] Case[Pl_sh]))                # plural  
NounClass NumSubstObl[Agr] [<num>:] NumOblique Case[all_ga] (AllDer | (AllDer1 AllDer2))?                               # singular allative derivations
NounClass NumSubstObl[Agr] [<num>:] NumOblique Plural[Pl_sh] Case[all_der,Pl_sh] (AllDer | (AllDer1 AllDer2))?          # plural allative derivations


